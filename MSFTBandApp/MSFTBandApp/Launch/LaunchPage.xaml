<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSFTBandApp.Launch.LaunchPage">

	<StackLayout>
		<ActivityIndicator IsRunning="True" VerticalOptions="CenterAndExpand" IsVisible="{Binding Loading}" />
		<Label x:Name="AppInitError" Text="MSFTBandApp couldn't initialise – is your Band connected?" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" IsVisible="{Binding Error}" />
	</StackLayout>

</ContentPage>