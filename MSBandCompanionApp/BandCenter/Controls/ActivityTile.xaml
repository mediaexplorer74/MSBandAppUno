<?xml version="1.0" encoding="UTF-8" ?>
<ContentView x:Class="BandCenter.Controls.ActivityTile"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.Content>
        <Grid HorizontalOptions="CenterAndExpand" VerticalOptions="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*" />
                <ColumnDefinition Width="25*" />
                <ColumnDefinition Width="15*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="ButtonMinus"
                    Grid.Column="0"
                    Clicked="ButtonMinus_Clicked"
                    Image="minus.png" />
           
            <Label x:Name="NumericLabel1"
                   Grid.Column="1"
                   HorizontalTextAlignment="Center" />

            <Label x:Name="NumericLabel2"
                   Grid.Column="1"
                   HorizontalTextAlignment="Center" />

            <Label x:Name="NumericLabel3"
                   Grid.Column="1"
                   HorizontalTextAlignment="Center" />

            <Button x:Name="ButtonPlus"
                    Grid.Column="2"
                    Clicked="ButtonPlus_Clicked"
                    Image="add.png" />
        </Grid>
    </ContentView.Content>
</ContentView>
